<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:padding="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/textView"
                style="@style/Settings_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credits" />

            <TextView
                android:id="@+id/textView2"
                style="@style/Settings_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanks to FFF Team for this superdupercool font (FFF-Forward)." />

            <TextView
                android:id="@+id/textView3"
                style="@style/Settings_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanks to my brother Wiecho for melting my brain with Kotlin programing language :) (I hope, he reads this)" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>